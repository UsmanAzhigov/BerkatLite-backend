generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  title       String   
  description String
  price       Int
  images      String[]
  category    String
  popular     Int      @default(0)
  city        String
  phone       String[]
  properties  Json?
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}

